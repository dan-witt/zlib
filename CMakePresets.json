{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
	{
            "name":"android",
            "hidden":true,
	    "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "ANDROID_NDK": "$env{ANDROID_NDK}",
                "ANDROID_PLATFORM":"android-22",
                "CMAKE_TOOLCHAIN_FILE": "$env{ANDROID_NDK}/build/cmake/android.toolchain.cmake"
            }
	},
		    

        {
            "name": "android-arm",
            "hidden": false,
	    "inherits": "android",

            "cacheVariables": {
                "ANDROID_ABI": "armeabi-v7a",
		"ZLIB_OUTPUT_ARCH" : "armeabi-v7a"
            }
        },
        {
            "name": "android-arm64",
            "hidden": false,
	    "inherits": "android",
            "cacheVariables": {
                "ANDROID_ABI": "arm64-v8a",
                "ZLIB_OUTPUT_ARCH" : "arm64-v8a"

            }
        },
        {
            "name": "android-x86",
            "hidden": false,
            "inherits": "android",
            "cacheVariables": {
                "ANDROID_ABI": "x86",
                "ZLIB_OUTPUT_ARCH" : "android-x86"
            }
        },
        {
            "name": "android-x86_64",
            "hidden": false,
            "inherits": "android",
            "cacheVariables": {
                "ANDROID_ABI": "x86_64",
                "ZLIB_OUTPUT_ARCH" : "android-x86_64"

            }
        },
        {
            "name": "linux",
            "hidden": false,
	    "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "ZLIB_OUTPUT_ARCH" : "linux"

            }


        }
    ],
    "buildPresets":[
	    {
	    "name":"android-arm",
	    "configurePreset":"android-arm"
	    },
	    {
            "name":"android-arm64",
            "configurePreset":"android-arm64"
            },
	    {
            "name":"android-x86",
            "configurePreset":"android-x86"
            },
	    {
            "name":"android-x86_64",
            "configurePreset":"android-x86_64"
            },
	    {
            "name":"linux",
            "configurePreset":"linux"
            }
    ]
}

